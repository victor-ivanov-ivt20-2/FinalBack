generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  username           String
  email              String    @unique
  hashedPassword     String
  hashedRefreshToken String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now())
  deletedAt          DateTime?
  role               Role?
}

enum Role {
  User
  Placer
}

model Place {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  addressId   Int
  longitude   String?
  latitude    String?
  // address     Address @relation(fields: [addressId, longitude, latitude], references: [id, longitude, latitude], onDelete: Cascade)
  // Address     Address @relation(fields: [addressId], references: [id])
}

model Image {
  id       String @id @default(cuid())
  name     String
  url      String @unique
  mimetype String
  size     String
  placeId  Int
}


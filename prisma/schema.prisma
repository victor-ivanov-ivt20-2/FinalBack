// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://ace:password@ace-development.ru:5432/db?schema=public"
}

model User {
  id                 String    @id @default(cuid())
  username           String
  email              String    @unique
  hashedPassword     String
  hashedRefreshToken String?
  phone              String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now())
  deletedAt          DateTime?
  role               Role?
  Review             Review[]
  Order              Order[]
}

enum Role {
  User
  Placer
}

model Place {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  price       Int?
  region      String?
  city        String
  street      String
  house       String?
  rating      Int?
  longitude   String?
  latitude    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now())
  categories  Category[]
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  places Place[]
}

model Order {
  id      String   @id @default(cuid())
  userId  String
  money   Decimal  @db.Decimal(9, 2)
  startAt DateTime
  user    User     @relation(fields: [userId], references: [id])
}

model Review {
  id        Int       @id @default(autoincrement())
  userId    String
  content   String
  rating    Int
  createdAt DateTime
  updatedAt DateTime
  deletedAt DateTime?
  user      User      @relation(fields: [userId], references: [id])
}

model Image {
  id       String @id @default(cuid())
  name     String
  url      String @unique
  mimetype String
  size     String
  placeId  Int
}
